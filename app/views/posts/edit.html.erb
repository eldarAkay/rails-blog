<div class="col-lg-8">
  <form action="/posts/update/<%= @post.id %>" method="POST">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" value="<%= @post.title %>" id="exampleInputEmail1" name="post[title]" class="form-control">
    </div>
    <div class="mb-3" >
      <label class="form-label"> Choose topic:</label>
      <select class="form-select" name="post[topic_id]" aria-label="Default select example">
        <% @topics.each do |topic| %>
          <option value="<%= topic.id %>" selected="selected"><%= topic.title %></option>
        <% end %>
      </select>
    </div>
    <div class="mb-3" >
      <label class="form-label">Text</label>
      <textarea type="text" name="post[body]" class="form-control"></textarea>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
